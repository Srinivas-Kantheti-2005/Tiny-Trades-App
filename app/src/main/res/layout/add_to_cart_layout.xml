<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="170dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginTop="10dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/cart_image"
            android:contentDescription="@string/image"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cart_title"
            android:text="@string/title"
            android:textSize="16sp"
            android:textStyle="normal"
            android:textColor="@color/black"
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toEndOf="@id/cart_image"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cart_size"
            android:text="@string/size"
            android:textSize="16sp"
            android:textStyle="normal"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toEndOf="@id/cart_image"
            app:layout_constraintTop_toBottomOf="@id/cart_title"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/decrement"
            android:src="@drawable/baseline_arrow_left_24"
            android:contentDescription="@string/decrement"
            android:layout_marginStart="10dp"
            android:layout_marginTop="0dp"
            app:layout_constraintTop_toBottomOf="@id/cart_size"
            app:layout_constraintStart_toEndOf="@id/cart_image"
            app:layout_constraintTop_toTopOf="@id/quantity"
            app:layout_constraintBottom_toBottomOf="@id/quantity"
            app:layout_constraintEnd_toStartOf="@id/quantity"/>

        <EditText
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/quantity"
            android:autofillHints="no"
            android:text="@string/buyer_item_quantity"
            android:inputType="number"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/cart_size"
            app:layout_constraintStart_toEndOf="@id/decrement"
            app:layout_constraintEnd_toStartOf="@id/increment"
            tools:ignore="LabelFor" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/increment"
            android:src="@drawable/baseline_arrow_right_24"
            android:contentDescription="@string/increment"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginTop="0dp"
            app:layout_constraintTop_toBottomOf="@id/cart_size"
            app:layout_constraintStart_toEndOf="@id/quantity"
            app:layout_constraintTop_toTopOf="@id/quantity"
            app:layout_constraintBottom_toBottomOf="@id/quantity"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cart_price"
            android:text="@string/price"
            android:textSize="16sp"
            android:textStyle="normal"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toBottomOf="@id/quantity"
            app:layout_constraintStart_toEndOf="@id/cart_image"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>

